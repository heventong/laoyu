
function getKeyWord() {
    var str = document.referrer;
    if (str.indexOf('baidu.com') != -1) {
        var patt = /&wo?r?d=([\s\S]+?)&/i;
        var n = patt.exec(str);
        if (n == null) {
            return false;
        } else {
            return decodeURI(n[1]);
        }
    }
   else if (str.indexOf('sm.cn') != -1) {
        var patt = /&s?q=([\s\S]+?)&/i;
        var n = patt.exec(str);
        if (n == null) {
            return false;
        } else {
            return n[1];
        }
    }
    else if (str.indexOf('sogou.com') != -1) {
        if (str.indexOf('&query=') != -1) {
            var patt = /&query=([\s\S]+?)&/i;
            var n = patt.exec(str);
            if (n == null) {
                var patt = /&query=([\s\S]+)/i;
                var n = patt.exec(str);
                console.log(n);
                return n[1];
            } else {
                console.log(n);
                return n[1];
            }
        } else if (str.indexOf('&keyword=') != -1) {
            var patt = /&keyword=([\s\S]+?)&/i;
            var n = patt.exec(str);
            console.log(n);
            if (n == null) {
                return false;
            } else {
                return decodeURI(n[1]);
            }
        }
    } else {
        return '直接书签打开';
    }
}

var keyword = getKeyWord();

// cnzz的js
var cnzzjs = '<script type="text/javascript" src="https://s9.cnzz.com/z_stat.php?id=1277962860&web_id=1277962860"></script>';

if (cnzzjs != '') {
    document.writeln('<div style="display: none;">' + cnzzjs + '</div>');
}

function copy(xw, dz) {
    _czc.push(['_trackEvent', xw, stxlwx, keyword, 1]);
    $.ajax({
            url:'http://heven.top:8000/app/log',
            method:'post',
            data:{'type':'gowechat','local_url':window.location.href,'weixin':stxlwx},
        })
	window.location.href = jump + '?wx=' + stxlwx;
	
}
//返回去微信，点击咨询，去微信
function gowechat(xw, dz) {
    alert(1)
	window.location.href = jump + '?wx=' + stxlwx;
    $.ajax({
            url:'http://heven.top:8000/app/log',
            method:'post',
            data:{'type':'gowechat','local_url':window.location.href,'weixin':stxlwx},
        })
	_czc.push(['_trackEvent', xw, stxlwx, keyword, 1]);
    
}
